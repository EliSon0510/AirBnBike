<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://hensel.eu/wp-content/uploads/2019/02/neuer_partner_banner-1.jpg);">
    <h1>Your bookings</h1>
</div>

<div class="flex-container">
  <h3 class="text-center">Your future bookings</h3>
  <br>
</div>

<div class="flex-container">

  <div class="grid-cards">

    <% @future_rentals.each do |future_rental| %>


      <div class=".card-bike .dashboard">
        <p class="text-center"> <em>
        <%= future_rental.start_date %>
        <%= '-' %>
        <%= future_rental.end_date %>
        </em></p>
        <% if future_rental.bike.photo.attached? %>
          <%= cl_image_tag future_rental.bike.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <%= image_tag "logo.png" %>
        <% end %>
        <h3><%= link_to future_rental.bike.category, bike_path(future_rental.bike) %></h3>
          <%= link_to "Edit your Booking", edit_bike_rental_path(future_rental.bike, future_rental), class: "btn-round-corners" %>
        <%= link_to "Delete this booking", rental_path(future_rental), method: :delete, remote: true, data: {confirm: "Are you sure?"}, class: "btn-round-corners" %>


      </div>
    <% end %>
  </div>
</div>





<div class="flex-container">
  <h3>Your previous bookings</h3>
  <br>
</div>

<div class="flex-container">
  <div class="grid-cards">
    <% @past_rentals.each do |past_rental| %>
     <div class=".card-bike .dashboard">
        <p class="text-center"> <em>
        <%= past_rental.start_date %>
        <%= '-' %>
        <%= past_rental.end_date %>
        </em></p>
        <% if past_rental.bike.photo.attached? %>
          <%= cl_image_tag past_rental.bike.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <%= image_tag "logo.png" %>
        <% end %>
          <h3><%= link_to past_rental.bike.category, bike_path(past_rental.bike) %></h3>
          <h3><%= link_to past_rental.bike.category, bike_path(past_rental.bike) %></h3>
        <%= link_to "Delete this booking", rental_path(past_rental), method: :delete, remote: true, data: {confirm: "Are you sure?"}, class: "btn-round-corners" %>
      </div>

      </div>
    <% end %>
  </div>
</div>


