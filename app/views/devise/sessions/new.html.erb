<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://previews.123rf.com/images/a7880s/a7880s1606/a7880s160600136/68958002-bicycle-banner-graphic-design-bike-types-vector-illustration-flat-design.jpg);">
  <div class="container">
    <h1>Welcome to AirBnBike</h1>
  </div>
</div>

<div class="flex-container">
  <h2>Please log in</h2>
</div>

<div class="flex-container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
</div>



<div class="flex-container">

  <%= render "devise/shared/links" %>
</div>
